
{% extends getPartial('page-design') %}
{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <title>{{ trans("Ceres::Template.orderCheckout") }} | {{ config("Ceres.header.company_name") }}</title>
{% endblock %}

{% block PageBody %}
	
    <div class="page-content checkout container-max">
    	<div class="row m-b-3">
    		<div class="col-sm-9">
    			<h1 class="h2">Delete Payment Information</h1>
            </div> 
        	<div class="col-xs-12"><hr></div>
        </div>
        <br>
		<div class="row">
    		<div class="col-sm-6">
	    		<h4>Are you sure to delete this payment information?</h4>
	    		<form action="{{ $cancelUrl} }" method="post">
	                <input type="submit" name="action" value="Cancel" class="btn btn-primary btn-medium">
	            </form>
	    		<form action="{{ $deleteResponseUrl} }" method="post">
	                <input type="hidden" name="id" value="{{ $id }}"/>
	                <input type="hidden" name="selected_payment" value="{{ $paymentKey }}"/>  
	                <input type="submit" name="action" value="Confirm" class="btn btn-primary btn-medium">
	            </form>
	    	</div>
		</div>
		<div class="col-xs-12"><hr></div>
    </div>

{% endblock %}