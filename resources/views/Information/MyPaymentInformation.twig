
{% extends getPartial('page-design') %}
{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <title>{{ trans("Ceres::Template.orderCheckout") }} | {{ config("Ceres.header.company_name") }}</title>
{% endblock %}

{% block PageBody %}
	
    <div class="page-content checkout container-max">
		<div class="row">
    		<div class="col-sm-12">
	    		<h4>Credit Card</h4>
	    		<div class="shipping-addresses-select">
                    <invoice-address-select :address-list="{{ services.customer.getAddresses(1) | json_encode() }}"
                                            :selected-address-id="{{ services.checkout.getBillingAddressId() | json_encode }}"
                                            :country-name-map="{{ countryNameMap | json_encode()}}"></invoice-address-select>
                </div>
			</div>
		</div>
		<div class="row">
    		<div class="col-sm-12">
	    		<h4>Direct Debit</h4>
	    		<div class="shipping-addresses-select">
                    <invoice-address-select :address-list="{{ services.customer.getAddresses(1) | json_encode() }}"
                                            :selected-address-id="{{ services.checkout.getBillingAddressId() | json_encode }}"
                                            :country-name-map="{{ countryNameMap | json_encode()}}"></invoice-address-select>
                </div>
			</div>
		</div>
		<div class="row">
    		<div class="col-sm-12">
	    		<h4>Paypal</h4>
	    		<div class="shipping-addresses-select">
                    <invoice-address-select :address-list="{{ services.customer.getAddresses(1) | json_encode() }}"
                                            :selected-address-id="{{ services.checkout.getBillingAddressId() | json_encode }}"
                                            :country-name-map="{{ countryNameMap | json_encode()}}"></invoice-address-select>
                </div>
			</div>
		</div>
    </div>

{% endblock %}